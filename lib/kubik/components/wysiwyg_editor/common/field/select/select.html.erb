<div class='input select'>
  <label class='label' for='<%= @field[:name] %>-<% @widget_id %>'><%= @field_label %></label>
  <select
         id='<%= @field_name%>-<%= @widget_id %>'
         tabindex='1'
         name='<%= @field_name %>'
         class='input'
         <%= @index.present? ? "data-item-index='#{@index}'" : nil %>
         data-action='change->kubik-widget#updateField'><%= @field_value %>
    <% @options.each do |option| %>
      <option value='<%= option[:value] %>' <%= option[:value] == @field_value ? 'selected' : nil %>><%= option[:label] %></option>
    <% end %>
  </select>
  <p class='inline-hints'><%= @field[:hint] %></p>
</div>
