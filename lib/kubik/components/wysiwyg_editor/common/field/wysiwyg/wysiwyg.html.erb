<div class='input text'>
  <label class='label' for='<%= @field[:name] %>-<% @widget_id %>'><%= @field_label %></label>
  <div
     contenteditable='true'
     tabindex='1'
     data-field-name='<%= @field_name %>'
     class='input input-<%= @field[:type] %> <%= @field[:name] %>'
     data-action='input->kubik-widget#updateWysiwygField '
     id='<%= @field[:name] %>-<%= @widget_id %>'>
         <%= @field_value.to_s.html_safe %>
     </div>
  <p class='inline-hints'><%= @field[:hint] %></p>
</div>
